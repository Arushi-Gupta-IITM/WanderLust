<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">

        <h2 class="mb-3">Log in on WanderLust</h2>

        <form action="/login" method="POST" novalidate class="needs-validation">
            <div>
                <label for="username" class="form-label input-label">Username:</label>
                <input type="text" id="username" name="username" class="form-control" required>
            </div> 

            <br>

            <div>
                <label for="password" class="form-label input-label">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div> 

            <br>

            <button class="btn btn-outline-danger"><b> LogIn </b> </button>
        </form>

        
    </div>
</div>